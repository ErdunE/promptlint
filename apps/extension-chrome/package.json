  "dependencies": {
    "@promptlint/rules-engine": "file:../../packages/rules-engine",
    "@promptlint/site-adapters": "file:../../packages/site-adapters", 
    "@promptlint/shared-types": "file:../../packages/shared-types"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.270",
    "vite": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "prompts",
    "linting",
    "productivity"
