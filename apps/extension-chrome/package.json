{
  "name": "@promptlint/extension-chrome",
  "version": "0.1.0",
  "description": "PromptLint Chrome Extension - Grammarly for AI prompts",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "package": "npm run build && node scripts/package-extension.js",
