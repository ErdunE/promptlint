{
  "name": "@promptlint/template-engine",
  "version": "0.5.1",
  "description": "Dynamic template generation system for PromptLint rephrase functionality",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@promptlint/adaptive-engine": "file:../adaptive-engine",
    "@promptlint/domain-classifier": "file:../domain-classifier",
    "@promptlint/shared-types": "file:../shared-types"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "promptlint",
    "template",
    "rephrase",
    "ai",
    "prompt-engineering",
    "chrome-extension"
  ],
  "author": "PromptLint Team",
  "license": "MIT"
}
