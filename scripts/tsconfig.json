{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "../",
    "paths": {
      "@promptlint/shared-types": ["packages/shared-types/src"],
      "@promptlint/template-engine": ["packages/template-engine/src"],
      "@promptlint/adaptive-engine": ["packages/adaptive-engine/src"],
      "@promptlint/rules-engine": ["packages/rules-engine/src"]
    }
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
